# Application
APP_NAME=VideoSite
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5434/videosite
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5434/videosite

# Redis
REDIS_URL=redis://localhost:6381/0
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_DB=0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost:9002
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=videos
MINIO_SECURE=False

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Celery
CELERY_BROKER_URL=redis://localhost:6381/1
CELERY_RESULT_BACKEND=redis://localhost:6381/2

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@videosite.com

# Pagination
PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Upload
MAX_UPLOAD_SIZE=5368709120  # 5GB
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mkv,.mov,.flv
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.webp
